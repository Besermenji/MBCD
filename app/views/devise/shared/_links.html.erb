<% if controller_name != 'sessions' %>
  <%= link_to t('.sign_in', default: 'Sign in'), new_session_path(resource_name), class:'auth_link --big' %><br />
<% end %>

<% if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to t('.sign_up', default: 'Sign up'), new_registration_path(resource_name), class:'auth_link --big' %><br />
<% end %>

<div class="margin-top-large"></div>

<% if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to t('.didn_t_receive_confirmation_instructions', default: "Didn't receive confirmation instructions?"), new_confirmation_path(resource_name), class: 'auth_link' %><br />
<% end %>

<% if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to t('.didn_t_receive_unlock_instructions', default: "Didn't receive unlock instructions?"), new_unlock_path(resource_name), class: 'auth_link' %><br />
<% end %>

<% if devise_mapping.omniauthable? %>
  <%= link_to user_facebook_omniauth_authorize_path, class:"auth_link" do %>
    <%= image_tag "fb-icon.png", class:"--fb_icon" %>
    <span class="class: 'auth_link"><%=t('.sign_in_with_fb', default: "Continue with Facebook") %></span>
  <% end %>
  <br />

  <%= link_to user_google_oauth2_omniauth_authorize_path, class:"auth_link" do %>
    <%= image_tag "google-icon.png", class:"--google_icon" %>
    <span class="class: 'auth_link"><%=t('.sign_in_with_g+', default: "Continue with Google") %></span>
  <% end %>

<% end %>
